{% extends 'base.html.twig' %}

{% block title %}{{band.getName()}}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/paper-kit.css">
{% endblock %}

{% block body %}
    <div class="page-header section-dark" style="background-image: url('/{{band.getPicture().getPath()}}')">
    <div class="filter"></div>
    <div class="content-center">
      <div class="container">
        <div class="title-brand">
          <h1 class="presentation-title">{{band.getName()}} </h1>
        </div>
        <h2 class="presentation-subtitle text-center">Depuis le {{band.getCreatedAt().format('d/m/Y')}}</h2>
                <h2 class="presentation-subtitle text-center">{{band.getMembers().count()}} Membres</h2>
      </div>
    </div>
  </div>

    {% if app.user and app.user.isAdmin() %}

    <section style="display:flex;flex-direction:row;margin:10px;width:100%;justify-content:space-between;">
        <a href="{{ path('band_edit', {'id': band.id}) }}" class="btn btn-primary">Editer</a>
    {{ include('band/_delete_form.html.twig') }}
    </section>

    {% endif %}

    {% include 'member/_list.html.twig' with {members:band.getMembers()} only %}


{% endblock %}
